<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teams Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">🏏 Match Teams Details</h1>
        
        <% if (teamsData && teamsData.length > 0) { %>
            <% teamsData.forEach(match => { %>
                <div class="row mb-5">
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="text-center"><%= match.team1.name %></h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% match.team1.players.forEach(player => { %>
                                    <li class="list-group-item">
                                        <a href="/player/<%= encodeURIComponent(player.name) %>" class="text-decoration-none">
                                            <i class="bi bi-person"></i> <%= player.name %>
                                        </a>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-header bg-danger text-white">
                                <h5 class="text-center"><%= match.team2.name %></h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% match.team2.players.forEach(player => { %>
                                    <li class="list-group-item">
                                        <a href="/player/<%= encodeURIComponent(player.name) %>" class="text-decoration-none">
                                            <i class="bi bi-person"></i> <%= player.name %>
                                        </a>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="text-center my-3">
                    <h5 class="fw-bold">🏆 Winning Team: <span class="text-success"><%= match.winningTeam %></span></h5>
                </div>
                <hr>
            <% }) %>
        <% } else { %>
            <p class="text-center text-danger">No team details available.</p>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
