<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .series-card {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
      }

      .series-card h4 {
        color: #007bff;
      }

      .series-card p {
        color: #555;
      }

      .card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
      }

      .button-container {
        text-align: center;
        margin-top: 30px;
      }

      .carousel-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
      }

      .carousel-button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Recently Planned Cricket Series</h1>

      <% if (error) { %>
        <p class="alert alert-danger text-center"><%= error %></p>
      <% } else if (seriesData && seriesData.length > 0) { %>
        <!-- Grid to display 4 series at a time -->
        <div class="card-container">
          <% seriesData.slice(0, 4).forEach((series) => { %>
            <div class="series-card" style="width: 18rem;">
              <h4><%= series.series_name %></h4>
              <p><strong>Status:</strong> <%= series.status %></p>
              <p><strong>Season:</strong> <%= series.season %></p>
              <p><strong>Updated At:</strong> <%= series.updated_at %></p>
            </div>
          <% }); %>
        </div>

        <!-- Button to slide more series -->
        <div class="button-container">
          <button class="carousel-button" onclick="loadMoreSeries()">View More Series</button>
        </div>
      <% } else { %>
        <p class="alert alert-warning text-center">No series data available.</p>
      <% } %>
    </div>

    <!-- Bootstrap JS (include popper.js and bootstrap.bundle.js) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <script>
      let currentIndex = 0;

      function loadMoreSeries() {
        // Show next 4 series from the array
        currentIndex += 4;
        const series = <%- JSON.stringify(seriesData) %>; // Pass data from backend
        const endIndex = currentIndex + 4;
        const seriesSubset = series.slice(currentIndex, endIndex);

        const container = document.querySelector('.card-container');
        container.innerHTML = '';

        // Add new series cards to the container
        seriesSubset.forEach((series) => {
          const card = document.createElement('div');
          card.classList.add('series-card');
          card.style.width = '18rem';
          card.innerHTML = `
            <h4>${series.series_name}</h4>
            <p><strong>Status:</strong> ${series.status}</p>
            <p><strong>Season:</strong> ${series.season}</p>
            <p><strong>Updated At:</strong> ${series.updated_at}</p>
          `;
          container.appendChild(card);
        });

        // Disable button if no more series to load
        if (endIndex >= series.length) {
          document.querySelector('.carousel-button').disabled = true;
          document.querySelector('.carousel-button').innerText = 'No More Series';
        }
      }
    </script>
  </body>
</html>
