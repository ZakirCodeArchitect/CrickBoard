<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-search {
            background-color: #007bff;
            color: white;
        }

        .btn-search:hover {
            background-color: #0056b3;
        }

        .error-message {
            color: #dc3545;
        }

        .player-details {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4">
                    <h2 class="text-center mb-4">üîç Player Search</h2>
                    <form action="/players/search" method="POST" id="playerSearchForm">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="playerName" placeholder="Enter Player Name" required>
                            <button class="btn btn-search" type="submit">Search</button>
                        </div>
                        <% if (error) { %>
                            <div class="alert alert-danger error-message" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                    </form>

                    <% if (player) { %>
                        <div class="player-details">
                            <h4 class="text-center text-success">Player Found!</h4>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Name:</strong> <%= player.fullName %></li>
                                <li class="list-group-item"><strong>Age:</strong> <%= player.age %></li>
                                <li class="list-group-item"><strong>Role:</strong> <%= player.playingRole %></li>
                                <li class="list-group-item"><strong>Batting Style:</strong> <%= player.battingStyle %></li>
                                <li class="list-group-item"><strong>Bowling Style:</strong> <%= player.bowlingStyle %></li>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('playerSearchForm').addEventListener('submit', function(event) {
            const playerName = document.querySelector('input[name="playerName"]').value.trim();
            if (!playerName) {
                event.preventDefault(); // Prevent form submission
                alert('Player name is required!');
            }
        });
    </script>
</body>
</html>
